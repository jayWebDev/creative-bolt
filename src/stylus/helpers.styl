.bg-color--main
  background-color: main-color

.bg-color--secondary
  background-color: secondary-color

.headline--left
  margin: 0 auto 70px
  text-align: center

  +mq-min(450px)
    margin: 0 0 70px 95px
    text-align: left

.headline--center
  margin: 0 auto 70px
  text-align: center

.deco-centerline--main,
.deco-centerline--secondary
  &::after
    content: ''
    display: block
    position: absolute
    top: 50%
    width: 100%
    height: 1px
    z-index: -1

.deco-centerline--main
  &::after
    background-color: main-color

.deco-centerline--secondary
  &::after
    background-color: secondary-color

.text--white
  color: white

.text--main
  color: main-color

.text--secondary
  color: secondary-color

.text--strong
  font-weight: 700

.lg-btm-mg
  margin-bottom: 100px
