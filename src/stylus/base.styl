* {
  box-sizing: border-box
}

body
  margin: 0
  padding: 0
  font-size: font-size
  line-height: line-height
  font-family: font-family
  overflow-x: hidden

h1, h2, h3, h4, h5, h6
  margin: 0
  padding: 0
  text-transform: uppercase

h1, h2
  font-size: emify(30)

  +mq-min(400px)
    font-size: emify(36)

  +mq-min(620px)
    font-size: emify(48)

  +mq-min(820px)
    font-size: emify(64)

h3
  font-size: emify(36)

h4
  font-size: emify(24)

ul
  margin: 0
  padding: 0
  list-style-type: none

.section-container
  display: block
  position: relative
  width: 100%
  margin: 0 auto

.section-container
  max-width: 960px

.section-headline
  display: inline-block
  padding: 0 20px
  box-shadow: 0 15px 20px -7px rgba(0, 0, 0, .5)
  color: white

.section-headline-wrapper
  position: relative
  z-index: 1

.section-headline--secondary
  position: relative
  width: 100%
  margin: 0 35px 30px
  padding-bottom: 25px
  line-height: 1.1

  +mq-min(960px)
    margin: 0 95px 65px

  &::after
    content: ''
    display: block
    position: absolute
    bottom: 0
    left: 0
    width: (145/960) * 100%
    height: 10px

.underline--wedding-primary
  &::after
    background-color: wedding-primary-color

.section-description
  margin-bottom: 90px

.section-description__paragraph
  margin: 0 95px;

.button
  text-decoration: none
  text-transform: uppercase
  color: inherit

.photo-mosaic
  display: table
  position: relative
  margin: 0 0 150px
  z-index: 1

  &.tilt-left
    transform: rotate(-30deg)

  &.tilt-right
    transform: rotate(30deg)

  &--wedding-mobile
    width: 111.6666%
    margin-left: -(84/1440) * 100%

  &--wedding-invite
    width: 107.6388%
    margin-left: -(56/1440) * 100%

.mosaic__column
  display: table-cell
  vertical-align: top

  &--wedding-mobile
    padding: 0 1.7361%

  &--wedding-invite
    padding: 0 (18/1440*100)%

  &:first-of-type
    padding-left: 0

  &:last-of-type
    padding-right: 0

.mosaic__column--wedding-mobile-1
  padding-top: 375px

.mosaic__column--wedding-mobile-2
  padding-top: 278px

.mosaic__column--wedding-mobile-3
  padding-top: 166px

.mosaic__column--wedding-invite-1
  padding-top: 420px

.mosaic__column--wedding-invite-2
  padding-top: 110px

.mosaic__column--wedding-invite-3
  padding-top: 420px

.mosaic__column--wedding-invite-4
  padding-top: 110px

.photo-mosaic--cols-7
  & .mosaic__column
    width: (240/1440)%

.photo-mosaic--cols-4
  & .mosaic__column
    width: (399/1440)%

.photo-mosiac__image
  display: inline-block
  margin-bottom: 50px
