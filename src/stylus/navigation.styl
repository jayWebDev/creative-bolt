.main-nav
  position: relative
  width: 100%
  margin: 0 auto
  background: pink

  +mq-min(1100px)
    max-width: 960px

.main-nav__container
  position: fixed
  display: flex
  width: 100%
  margin: 0 auto
  background-color: alpha(white, 0.8)
  border-bottom: 1px solid secondary-color

  +mq-min(1100px)
    flex-direction: column
    align-items: start
    display: inline-block
    width: auto
    margin-left: -50px
    border-right: 1px solid secondary-color
    border-bottom: none

.main-nav__logo-wrapper
  position: relative
  top: 15px
  width: 43px
  height: 88.08px
  margin: 0 20px 0 15px

  +mq-min(376px)
    top: 10px
    width: 34.17px
    height: 70px
    margin: 0 45px 0 50px

  +mq-min(1100px)
    width: 25.87px
    height: 53px
    margin: 10px 0 20px 15px

.main-nav__list
  display: flex
  flex-direction: row
  flex-wrap: wrap
  align-items: stretch
  flex: 1
  padding: 12px 0
  color: main-color

  +mq-min(376px)
    padding: 0

  +mq-min(1100px)
    flex-direction: column
    align-items: start

.main-nav__item
  display: flex
  align-items: center
  flex-basis: 33.3333%

  +mq-min(376px)
    flex: none
    padding-right: (34/font-size)em

  &:last-of-type
    color: secondary-color

    +mq-min(620px)
      margin-left: auto

    +mq-min(1100px)
      margin-left: 0
