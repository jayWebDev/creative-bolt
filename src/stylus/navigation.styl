.main-nav
  position: fixed
  width: 100%
  background-color: alpha(white, 0.8)
  border-bottom: 1px solid secondary-color
  font-weight: 800

.main-nav__container
  display: flex
  margin: 0 auto

.main-nav__logo-wrapper
  position: relative
  top: 15px
  width: 43px
  height: 88.08px
  margin: 0 20px 0 15px

.main-nav__list
  display: flex
  flex-wrap: wrap
  align-items: stretch
  flex: 1
  padding: 12px 0
  color: main-color

.main-nav__item
  display: flex
  align-items: center
  flex-basis: 33.3333%
