.section--hero
  position: relative
  width: 100%
  height: 658px
  background: url(../images/faded_lines-01@2x.jpg) center -385px / 960px no-repeat
  z-index: -1

.hero__content
  max-width: 960px
  height: 100%
  margin: 0 auto

.hero__lockup--home,
.hero__lockup--wedding
  position: relative

.hero__lockup--home
  padding-top: 138px

  +mq-min(620px)
    margin: 0 (95/960) * 100% 0 0

.hero__lockup--wedding
  margin: 0 20px
  padding-top: 130px

  +mq-min(500px)
    margin: 0 (100/960) * 100%

  +mq-min(620px)
    margin: 0 (145/960) * 100%

.hero__logo-wrapper
  position: absolute
  width: 218.54px
  height: 447.64px
  z-index: 0

  +mq-min(620px)
    width: 261px;
    height: 535px;

.logo-wrapper--home
  right: 226px

  .js-logo--hero
    fill: secondary-color

.logo-wrapper--wedding
  right: 10px

  +mq-min(400px)
    left: 150px

  +mq-min(500px)
    left: 187px

  +mq-min(820px)
    left: 356px

  .js-logo--hero
    fill: wedding-secondary-color

.js-logo--hero
  width: 100%
  height: 100%

.section-headline__wrapper--hero
  position: relative
  z-index: 1
  clearfix()

.hero__headline--home,
.hero__headline--wedding,
.hero__subhead--home,
.hero__subhead--wedding
  position: relative
  margin: 0
  padding: 0
  color: white
  line-height: 1
  z-index: 1

.hero__headline--home,
.hero__headline--wedding
  margin-bottom: emify(5)
  clear: both

.hero__headline--home
  float: left
  margin-top: 274px

  +mq-min(500px)
    margin-bottom: 6px
    padding-top: 3px
    background-color: main-color

.hero__headline--wedding
  margin-top: 100px

.hero__subhead--home,
.hero__subhead--wedding
  font-size: emify(18)
  text-transform: uppercase

  +mq-min(400px)
    font-size: emify(24)

  +mq-min(500px)
    font-size: emify(30)

  +mq-min(820px)
    font-size: emify(36)

.hero__subhead--home
  display: inline

  +mq-min(500px)
    display: inline-block
    margin-left: 0
    padding-top: 3px
    background-color: main-lighter

  +mq-min(820px)
    margin-right: 70px
    float: right

.headline__segment, .subhead__segment

  +mq-min(500px)
    background-color: none

.headline__segment
  display: inline-block
  margin-bottom: 3px
  padding: (12/64)em (22/64)em

.subhead__segment
  display: inline-block
  padding: (12/36)em (22/36)em
