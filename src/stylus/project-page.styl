.section
  &--wedding-website-3
    position: relative

    &::before,
    &::after
      content: ''
      display: block
      position: absolute
      width: 100%
      max-width: 960px
      height: 100%
      left: 50%
      background-size: contain
      background-repeat: no-repeat
      transform: translateX(-50%)
      z-index: -1

    &::before
      top: -550px
      background-image: url(../images/project-images/wedding/faded_lines-wedding-purple@2x.png)

    &::after
      bottom: -530px
      background-image: url(../images/project-images/wedding/faded_lines-wedding-blue@2x.png)
      transform: translateX(-50%) rotate(-22deg)

  &--wedding-website-5
    position: relative

    &::before
    &::after
      content: ''
      display: block
      position: absolute
      width: 100%
      max-width: 960px
      height: 100%
      background-image: url(../images/project-images/wedding/faded_lines-wedding-purple@2x.png)
      background-size: contain
      background-repeat: no-repeat
      z-index: -1

    &::before
      top: -100px
      left: 2%
      transform: rotate(-30deg)

    &::after
      bottom: -550px
      right: -33%
      transform: rotate(-75deg)

    & .wedding-website__content
      position: relative

      &::after
        content: ''
        display: block
        position: absolute
        top: 21%
        width: 100%
        padding-top: 75%
        background-color: wedding-primary-color
        z-index: 0

.project__figure
  display: block
  position: relative
  width: 100%
  margin: 0

.project__figure--full-width,
.project__figure--alpha
  max-width: 960px
  margin: 0 auto 90px

.project__figure--alpha
  position: relative
  z-index: 0

  &::after
    content: ''
    display: block
    position: absolute
    top: 0
    bottom: 23px
    left: 0px
    right: 0px
    background-color: rgba(255, 255, 255, 0)
    box-shadow: project-shadow--alpha
    z-index: -1

.project__figure
  &--wedding-1
    &::before,
    &::after
      content: ''
      display: block
      position: absolute
      width: 100%
      max-width: 960px
      height: 100%
      left: 50%
      background-size: contain
      background-repeat: no-repeat
      transform: translateX(-50%)
      z-index: -1

    &::before
      top: -150px
      background-image: url(../images/project-images/wedding/faded_lines-wedding-blue@2x.png)

    &::after
      bottom: -86px
      left: 217px
      background-image: url(../images/project-images/wedding/faded_lines-wedding-blue@2x.png)
      background-position: 0 100%

  &--wedding-3
    .project__image
      margin-top: 230px

.project__image
  max-width: 100%
  border-radius: 10px
  box-shadow: project-shadow
  z-index: 1

.project__image--alpha
  border-radius: none
  box-shadow: none

.project__image--overflow-left
  margin-left: -95px

.project__image--overflow-right
  margin-left: 95px

.project-row
  margin-bottom: 90px
  clearfix()

.project-column
  float: left

.project-column--50w
  width: 50%
