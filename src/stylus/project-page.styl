.deco-bg-lines
  &--top--wedding-primary
  &--top--wedding-secondary
  &--bottom--wedding-primary
  &--bottom--wedding-secondary
    position: relative

  &--top--wedding-primary
  &--top--wedding-secondary
    &::before
      content: ''
      display: block
      position: absolute
      width: 100%
      max-width: 960px
      height: 800px
      background-size: contain
      background-repeat: no-repeat
      z-index: -1

  &--bottom--wedding-primary
  &--bottom--wedding-secondary
    &::after
      content: ''
      display: block
      position: absolute
      width: 100%
      max-width: 960px
      height: 800px
      background-size: contain
      background-repeat: no-repeat
      z-index: -1

  &--top--wedding-primary
    &::before
      background-image: url(../images/project-images/wedding/faded_lines-wedding-purple@2x.png)

  &--bottom--wedding-primary
    &::after
      background-image: url(../images/project-images/wedding/faded_lines-wedding-purple@2x.png)

  &--top--wedding-secondary
    &::before
      background-image: url(../images/project-images/wedding/faded_lines-wedding-blue@2x.png)

  &--bottom--wedding-secondary
    &::after
      background-image: url(../images/project-images/wedding/faded_lines-wedding-blue@2x.png)

  &--wedding-1
    &::before,
    &::after
      left: 50%
      transform: translateX(-50%)

    &::before
      top: -150px

    &::after
      bottom: -86px
      left: 217px
      background-position: 0 100%

  &--wedding-2
    &::before,
    &::after
      left: 50%
      transform: translateX(-50%)

    &::before
      top: -500px

    &::after
      bottom: -150px
      transform: translateX(-50%) rotate(-22deg)

  &--wedding-3
    &::before
      top: -102px
      left: 15%
      transform: rotate(180deg)

    &::after
      bottom: -167px
      right: 19%
      transform: rotate(-75deg)

  &--wedding-4
    &::before
      top: 170px
      left: -20%

    &::after
      top: 170px
      right: -25%
      transform: rotate(180deg)

  &--wedding-5
    &::before
      top: -148px
      left: 16%
      transform: rotate(180deg)

  &--wedding-6
    &::before
      transform: rotate(-30deg)

    &::after
      bottom: 30px
      left: 4%

  &--wedding-7
    &::before
      top: -293px
      left: -19%
      transform: rotate(-315deg)

    &::after
      bottom: -270px
      left: 16%
      transform: rotate(-315deg)


.deco-color-block
  position: relative

  &::after
    content: ''
    display: block
    position: absolute
    width: 100%
    z-index: 0

  &--wedding-primary
    &::after
      background-color: wedding-primary-color

  &--wedding-primary-lighter
    &::after
      background-color: wedding-primary-lighter

  &--wedding-website-1
    &::after
      top: 19%
      padding-top: (965/1440) * 100%

  &--wedding-website-2
    &::after
      top: 25%
      padding-top: (940/1440) * 100%

.project__figure
  display: block
  position: relative
  margin: 0 auto 100px

.project__figure--full-width
  width: 80%
  max-width: 960px

  +mq-min(960px)
    width: 100%

.project__figure--half-width
  width: 60%

  +mq-min(800px)
    width: 50%

.project__figure--alpha
  z-index: 0

  &::after
    content: ''
    display: block
    position: absolute
    top: 17px
    bottom: 27px
    left: 0px
    right: 0px
    background-color: rgba(255, 255, 255, 0)
    box-shadow: project-shadow--alpha
    z-index: -1

.project__figure
  &--wedding-1
    .project__image
      +mq-min(800px)
        margin-top: 230px

.project__image
  display: block
  max-width: 100%
  border-radius: border-radius
  box-shadow: project-shadow
  z-index: 1

.project__image--no-shadow,
.project__image--alpha
  border-radius: none
  box-shadow: none

.project__image--overflow-left
  +mq-min(800px)
    margin-left: -95px

.project__image--overflow-right
  +mq-min(800px)
    margin-left: 95px

.project__video
  position: relative
  max-width: 960px
  margin: 0 auto 150px
  padding: 0 8.33333%

  & .wistia_responsive_padding
    box-shadow: project-shadow

.project-colors
  display: inline-block
  margin: 0 30px 0

  &:last-of-type
    margin-left: 0

.project-colors__block
  display: inline-block
  width: 130px
  height: 130px
  margin-right: 30px
  border-radius: border-radius

  &:last-of-type
    margin-right: 0

.project-type
  display: inline-block

.project-type--specimen
  display: block
  max-width: 270px

.project-figcaption
  margin-top: 15px
  padding-top: 15px
  border-top: 1px solid #BDBFC2
  text-align: center

.project-navigation
  padding: 50px 0
  border-top: 1px solid #BDBFC2
  text-align: center

.project-navigation__container
  display: inline-block
  width: 50%
  text-align: center

.project-navigation__image
  display: inline-block
  width: 130px
  height: 130px
  margin-right: 30px
  background: 12% 6% / 700% no-repeat
  box-shadow: project-shadow

  &--roster-web
    background-image: url(../images/roster-portfolio-img@2x.jpg)

.project-navigation__label
  display: inline-block
  width: (290/480) * 100%
  max-width: 290px
  color: wedding-primary-color
  text-align: left
  text-transform: uppercase
  vertical-align: top

.project-navigation__direction
  margin: 0 0 15px

.project-navigation__title
  margin: 0

  &::after
    content: ''
    display: block
    position: relative
    bottom: -15px
    width: (145/480) * 100%
    height: 10px
    background-color: wedding-primary-color

.project-navigation__direction
.project-navigation__title
  display: inline-block

.project-row
  margin-bottom: 90px
  text-align: center
  clearfix()

.project-column
  width: 60%
  margin: 0 auto

  +mq-min(800px)
    float: left

.project-column--40w
  +mq-min(800px)
    width: 40%

.project-column--50w
  +mq-min(800px)
    width: 50%

.project-column--60w
  +mq-min(800px)
    width: 60%
