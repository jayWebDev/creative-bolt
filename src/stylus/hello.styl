.section--hello
  position: relative
  width: 100%
  z-index: 0

  &:after
    content: ''
    display: block
    position: absolute
    bottom: 0
    left: 50%
    width: 100%
    height: 100%
    max-width: 960px
    background: url(../images/faded_lines-01@2x.jpg) -360px 190px / 600px no-repeat
    transform: translateX(-50%)
    z-index: -1

    +mq-min(450px)
      background-position: -150px 200px
      background-size: 100%

    +mq-min(650px)
      background-position: -200px 200px

.hello__content
  position: relative
  padding: 10px 0 390px
  clearfix()

  +mq-min(650px)
    padding: 220px 0 150px

.hello__text
  float: left
  font-size: emify(30)
  max-width: 370px
  margin: 0
  padding-left: 30px
  color: secondary-color

  +mq-min(450px)
    padding: 0
    margin-left: 95px

  +mq-min(860px)
    font-size: emify(36)

  &:after
    content: ''
    display: block
    width: emify(130, 36)
    margin-top: 45px
    border-bottom: 10px solid main-color

.hello__image
  display: block
  position: absolute
  bottom: 0
  right: 0
  width: 350px
  overflow: hidden
  z-index: 1

  +mq-min(450px)
    width: (460/960) * 100%
    min-width: 350px
    max-width: 460px

  +mq-min(715px)
    width: 460px

.self-portrait
  position: relative
  width: 100%
  top: 20px
  left: 40px
